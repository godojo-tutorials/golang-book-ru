{
  "name": "godojo_book_ru",
  "version": "1.0.0",
  "description": "Go Tutorial Content Repository - Structured for godojo.dev website parsing",
  "type": "module",
  "scripts": {
    "author:init": "node scripts/content-author.js init",
    "author:new": "node scripts/content-author.js new",
    "author:validate": "node scripts/content-author.js validate",
    "author:preview": "node scripts/content-author.js preview",
    "author:publish": "node scripts/content-author.js publish",

    "content:check": "node scripts/content-checker.js",
    "content:format": "node scripts/content-formatter.js",
    "content:build": "node scripts/content-builder.js",
    "content:sync": "node scripts/git-sync.js",

    "structure:validate": "node scripts/structure-validator.js",
    "structure:generate": "node scripts/structure-generator.js",

    "bilingual:sync": "node scripts/bilingual-sync.js",
    "bilingual:check": "node scripts/bilingual-checker.js",

    "godojo:prepare": "node scripts/godojo-prepare.js",
    "godojo:validate": "node scripts/godojo-validator.js",

    "lint": "eslint . --ext .js,.ts,.md",
    "lint:fix": "eslint . --ext .js,.ts,.md --fix",
    "format": "prettier --write .",
    "test": "node scripts/test-runner.js",
    "help": "node scripts/help.js"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^9.1.6",
    "yaml": "^2.3.4",
    "slugify": "^1.6.6",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "boxen": "^7.1.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-markdown": "^3.0.1",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "golang",
    "go-language",
    "tutorial",
    "learning",
    "programming",
    "education",
    "godojo",
    "microlearning",
    "production-ready",
    "best-practices",
    "content-authoring",
    "bilingual",
    "structured-learning"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/[owner]/go-tutorial-content.git"
  },
  "author": "Alex Borovykov",
  "license": "MIT",
  "homepage": "https://godojo.dev",
  "bugs": {
    "url": "https://github.com/[owner]/go-tutorial-content/issues"
  }
}
